.video-content .video{
  width: 100%;
  height: 180px;
}
.course-content{
  width: 300px;
  margin: 0 auto;
}
.course-details{
  margin-top: 20rpx;
  border-bottom: 1px solid #999;
}
.course-title{
  font-size: 35rpx;
  color: #666;
  line-height: 35rpx;
}
.course-message {
  height: 24rpx;
  line-height: 24rpx;
  margin: 16rpx 0;
  font-size: 25rpx;
  display: flex;
  width: 100%;
  color: #999;
  align-items: center;
}
.course-message >.divider {
  margin: 0 10rpx;
}
.course-price-content{
  font-size: 40rpx;
  color: #FF4000;
  margin-bottom: 25rpx;
 }
 .course-price-content .course-price-label{
   font-size: 30rpx;
 }
 .course-price-content .course-price-current{
   font-family: PingFangSC-Semibold;
   font-weight: 600;
   font-size: 40rpx;
 }
 .course-price-content .course-price-original{
   color: #999;
   margin-left: 12rpx;
   text-decoration-line: line-through;
 }
 .course-chapter{
   margin-top: 30rpx;
 }
 .chapter-item{
   font-size: 30rpx;
   line-height: 30rpx;
 }
 .item-content-hover{
   border-radius: 20rpx;
   background-color: rgb(201, 201, 201);
 }
.item-content{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  margin: 35rpx 20rpx;
  padding: 20rpx;
}
.item-time{
  font-size: 25rpx;
  color: #999;
}